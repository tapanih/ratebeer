<%= render @beer %>

<% if current_user %>
  <h4>Give a rating:</h4>

  <%= form_with(model: @rating) do |form| %>
    <%= form.hidden_field :beer_id %>
    score: <%= form.number_field :score %>
    <%= form.submit "Create rating", class: "btn btn-primary" %>
  <% end %>
<% end %>

<div>
  <% if current_user %>
    <%= edit_and_destroy_buttons(@beer) %>
  <% end %>
  <%= link_to "Back to beers", beers_path %>
</div>
