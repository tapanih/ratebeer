<%= render @style %>

<div>
  <strong>Beers:</strong>
  <ul>
    <% @style.beers.each do |beer| %>
      <li><%= beer.name %></li>
    <% end %>
  </ul>
</div>

<% if current_user %>
  <%= link_to "Edit this style", edit_style_path(@style), class: "btn btn-secondary" %>
  <%= button_to("Destroy this style", @style, method: :delete, class: "btn btn-danger") %>
<% end %>
<%= link_to "Back to styles", styles_path %>