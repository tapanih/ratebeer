<% cache brewery do %>
  <div id="<%= dom_id brewery %>">
    <h2><%= brewery.name %>
      <% unless brewery.active %>
        <span class="badge bg-secondary">retired</span>
      <% end %>
    </h2>
    <p>
      <i>Established at <%= brewery.year %></i>
    </p>
    <p>
      Beers count: <%= brewery.beers.count %>
    </p>
    <table class="table table-striped table-hover">
      <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>Style</th>
        <th>Rating</th>
      </tr>
      </thead>
      <tbody>
      <% brewery.beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name, beer %></td>
          <td><%= link_to beer.style %></td>
          <td><%= round(beer.average_rating) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <% if brewery.ratings.present? %>
      Brewery has <%= pluralize brewery.ratings.count, "rating" %>
      with an average of <%= round(brewery.average_rating) %>.
    <% end %>
  </div>
<% end %>